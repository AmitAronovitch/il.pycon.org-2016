mixin talk(speaker)
  .talk-description
    h3.speaker
      = speaker.name

    .misc
      small=speaker.time
      small.track
        = speaker.track
        |  branch
      a.social.github(href="https://github.com/" + speaker.github)
        .fa.fa-github
      a.social.twitter(href="https://twitter.com/" + speaker.twitter)
        .fa.fa-twitter

    p= speaker.title
    
    
  .commit-holder
    .commit
      img.avatar(src=avatar(speaker.avatar), alt='Photo of ' + speaker.name)
    
mixin branch-out()
  .branch.out
    img(
      src="/2016/static/images/ui/branch-out.svg",
      onerror="this.onerror = null; this.src = '/2016/static/images/ui/branch-out.png'"
    )

mixin branch-in()
  .branch.in
    img(
      src="/2015/static/images/ui/branch-in.svg",
      onerror="this.onerror = null; this.src = '/2015/static/images/ui/branch-in.png'"
    )

