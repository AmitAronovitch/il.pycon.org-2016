extends ../base

mixin talk(speaker, time)
  .talk-description
    h3.speaker
      = speaker.name

    .misc
      small= time
      // small.track
        // = speaker.track
        // |  branch
      // a.social.github(href="https://github.com/" + speaker.github)
        // .fa.fa-github
      if speaker.twitterName
        a.social.twitter(href="https://twitter.com/" + speaker.twitterName)
          .fa.fa-twitter

    p= speaker.title
    
    
  .commit-holder
    .commit
      img.avatar(src=avatar(speaker.avatar), alt='Photo of ' + speaker.name)

mixin in_track_title(title, time, image)
  .talk-description
    h3.speaker
      = title

    .misc
      small= time
      // small.track
        // = speaker.track
        // |  branch
      // a.social.github(href="https://github.com/" + speaker.github)
        // .fa.fa-github

  .commit-holder
    .commit
      img.avatar(src=avatar(image), alt='Photo of ' + 'test')


mixin branch-out()
  .branch.out
    img(
      src="/2016/static/images/ui/branch-out.svg",
      onerror="this.onerror = null; this.src = '/2016/static/images/ui/branch-out.png'"
    )

mixin branch-in()
  .branch.in
    img(
      src="/2015/static/images/ui/branch-in.svg",
      onerror="this.onerror = null; this.src = '/2015/static/images/ui/branch-in.png'"
    )

