extends base

block vars
  - var pageClass = "home"

block viewport
  .pycon
    img.pycon-logo(
      alt="PyCon IL",
      src='/'+year+"/static/images/pycon-il-logo-new.png",
      onerror="this.onerror = null; this.src = '/2016/static/images/pycon-il-logo-new.png'"
    )

    h1(style='font-family:arial; font-size: 64px; padding-right: 14px;')
      | PyCon Israel 2016

    .pycon-info(style='font-family:arial; font-size: 56px; padding-right: 14px;')
      p.pycon-location Tel Aviv, Israel
      p.pycon-date May 2-3

  .claim
    .container
      p.
        The very first #[strong PyCon] in #[strong Israel]. Join us
        for a 2-day, 2-track event of learning, socializing, and fun,
        all about the #[strong Python] programming language

  .container
    .program
      .program-item
        h2 Become a Speaker
        p.
          Interested in giving a talk at the first Israeli PyCon?
          #[a(href="http://goo.gl/forms/iEBqCcqFtI") Submit a talk proposal]!
        p. 
          If you have any questions, feel free to contact us directly at 
          #[a(href="mailto:cfp@pycon.org.il") cfp@pycon.org.il]
        p. 
          The deadline for submitting a proposal is April 2nd, 2016.

      .program-item
        h2 Location
        //- .date Saturday 14th
        p.
          The conference will take place in the Ayalon Mall, at the Yes Planet 
          cinema complex.
        .venue
          i.fa.fa-map-marker
          span.
            #[a(href="https://goo.gl/maps/qvZwf6Ju3Wq") Yes Planet, Ayalon Mall, Ramat Gan]

    .registration
      h2 Registration
      p.lead.
        Registration is now open! #[a(href="https://ti.to/pycon-israel/pycon-israel-2016 ") Get your tickets here].
      p.
        Tickets cost 250 ₪ until April 2nd, after which their price will 
        increase to 350 ₪.
      p.
        Space is limited, so 
        #[a(href="https://ti.to/pycon-israel/pycon-israel-2016 ") get your ticket now!]

    .djangogirls
      h2 Django Girls
      p.lead.
        Join the very first #[a(href="https://djangogirls.org/telavivjaffa") Django Girls Tel Aviv-Jaffa] workshop on May 1st!

    .sponsors
      h2 Sponsors
      p.lead. 
        Would you like to support PyCon Israel? #[a(href="mailto:info@pycon.org.il") Send us an email] and join us as a sponsor!

      .diamond
        h3 Diamond sponsors
        .sponsor
          a(href="https://www.redhat.com/en/global/israel ")
            img(src=pageUrl("static/images/sponsors/redhat_resized.png"))

        .sponsor
          a(href="http://www.cymmetria.com")
            img(src=pageUrl("static/images/sponsors/cymmetria.jpg"))

      .gold
        h3 Gold sponsors
        .sponsor
          a.sponsor-psf(href="http://xtremio.com/")
            img(src=pageUrl("static/images/sponsors/xtremio.png"))
        .sponsor
          a.sponsor-psf(href="http://www.autodeskrnd.co.il/")
            img(src=pageUrl("static/images/sponsors/autodesk.png"))

      .silver
        h3 Silver sponsors
        .sponsor
          a.sponsor-imper(href="http://www.sentinelone.com")
            img(src=pageUrl("static/images/sponsors/sentinel_one.png"))

        .sponsor
          a.sponsor-psf(href="http://www.dropbox.com")
            img(src=pageUrl("static/images/sponsors/dropbox.png"))

        .sponsor
          a.sponsor-psf(href="http://weare.cisco.com/")
            img(src=pageUrl("static/images/sponsors/cisco.png"))

      .bronze
        h3 Bronze sponsors
        .sponsor
          a.sponsor-imper(href="https://www.hpe.com/il/en/home.html")
            img(src=pageUrl("static/images/sponsors/hpe.png"))

        .sponsor
          a.sponsor-imper(href="http://www.applitools.com")
            img(src=pageUrl("static/images/sponsors/applitools.png"))

        .sponsor
          a.sponsor-imper(href="https://www.python.org/psf/")
            img(src=pageUrl("static/images/sponsors/psf.png"))


    .news
      .line
      hr(width="75%", align="center")
      h2(align="center") Social Media Live Feed
      table(width="100%", cellpadding="1000", cellspacing="100", border="0", align="center")
        tr
          td(width="45%", valign="top")
            a.twitter-timeline(href='https://twitter.com/search?q=pyconil', data-widget-id='707326560232153088', data-chrome="nofooter noheader") Tweets about pyconil
            script.
              !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
          td(width="45%", valign="top")
            .fb-page(data-href='https://www.facebook.com/pyconisrael', data-tabs='timeline', data-small-header='false', data-adapt-container-width='true', data-hide-cover='false', data-show-facepile='true', data-width='500', data-height='600')
              .fb-xfbml-parse-ignore
                blockquote(cite='https://www.facebook.com/pyconisrael')
                  a(href='https://www.facebook.com/pyconisrael') PyCon Israel
