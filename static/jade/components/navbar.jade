header#top
  .navbar
    button.navbar-toggle(type="button", aria-expanded="false")
      .fa.fa-bars

    ul.nav.navbar-nav
      li.about
        a(href=pageUrl("#")) About
      li.getting-here(class=activePage == "getting-here" ? "active" : "")
        a(href=pageUrl("getting-here/")) Getting here
      li.tickets
        a(href=pageUrl("about/pycontest.html"))
          | #PyConTest
      //- li.tickets
      //-   a(href=pageUrl("about/tickets.html"))
      //-     | Tickets
      li.talks(class=activePage == "talks" ? "active" : "")
        a(href=pageUrl("talks/"))
          | Talks
          span.date Saturday 14th
      li.sprints(class=activePage == "workshops" ? "active" : "")
        a(href=pageUrl("workshops/"))
          | Sprints &amp; workshops
          span.date Sunday 15th
    
    a(href="/2015/")
      img.pycon-logo(
        alt="PyCon CZ",
        src='/'+year+"/static/images/pycon-cz-logo-icon.svg",
        onerror="this.onerror = null; this.src = '/2015/static/images/pycon-cz-logo.png'"
      )
